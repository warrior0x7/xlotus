#!/usr/bin/env bash

source ~/.local/lib/xlotus/xlfns

CONFIG=$XLOTUS_CFG

function printHelp () {
    cat $XLOTUS_HELP/xl-cmd
    cat $XLOTUS_HELP/footer
}

case $1 in
    -h|--help) printHelp;;
    *)
        if [ -z "$1" ]; then
            choice=$(awk -F ';' '{ printf "%2s %-5s %s\n", " ", $1, $2}' < "$CONFIG"/cmd |\
                 fzfcmd "CMD" |\
                 sed 's/[^A-Za-z]/ /g; s/ \{3,\}//g')

            if [ -n "$choice" ]; then
                cmd=$(grep --color=never ";$choice;" "$CONFIG"/cmd |\
                        awk -F ';' '{print $3}')

                script=$(echo "$cmd" | cut -d' ' -f1)

                if [[ "$cmd" =~ ^"[i]" ]]; then
                    if [ -f "$XLOTUS_BIN"/"$script" ]; then
                        bash -c "$XLOTUS_BIN/$(echo "$cmd" | sed 's/^\[i\] //g')"
                    else
                        bash -c "$(echo "$cmd" | sed 's/^\[i\] //g')"
                    fi
                elif [[ "$cmd" =~ ^"&" ]]; then
                    if [ -f "$XLOTUS_BIN"/"$script" ]; then
                        bash -c "$XLOTUS_BIN/$(echo "$cmd" | sed 's/^& //g') &"
                    else
                        bash -c "$(echo "$cmd" | sed 's/^& //g') &"
                    fi
                else
                    if [ -f "$XLOTUS_BIN"/"$script" ]; then
                        bash -c "$XLOTUS_BIN/$cmd"
                    else
                        bash -c "nohup bash -c '$cmd &' 2&>/dev/null"
                    fi
                fi
            fi
        fi
        ;;
esac
