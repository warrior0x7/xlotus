#!/usr/bin/env bash
# 
# Credit : https://askubuntu.com/a/1284966

. ~/.local/lib/xlotus/xlfns

CONFIG=$XLOTUS_CFG

function printHelp () {
    cat $XLOTUS_HELP/xl-daemon
    cat $XLOTUS_HELP/footer
}

case $1 in
    -h|--help) printHelp ;;
    *)
        for daemon in "$CONFIG"/daemon/*
        do
            bash -c "nohup bash -c '$daemon &' 2&>/dev/null"
        done
        ;;
esac
